<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufpe.cin.if710.podcast.ui.EpisodeDetailActivity">
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_item_title"
        tools:layout_editor_absoluteY="36dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_item_date"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_item_title" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_item_link"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_item_download_link" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_item_download_link"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_item_description" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/feed_item_description"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_item_date" />

</android.support.constraint.ConstraintLayout>
